{
  "manifest_version": 3,
  "name": "Hide Jira Comments",
  "version": "0.0.1",
  "action": { "default_popup": "index.html" },
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://*.atlassian.net/jira/*"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  }
}
